<style>
    .profile-pic {
      width: 150px;
      height: 150px;
      border-radius: 50%;
      object-fit: cover;
    }

    .profile-info {
      margin-bottom: 20px;
    }

    .history {
      background-color: #f8f9fa;
      padding: 20px;
      border-radius: 8px;
    }
  </style>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-4 text-center">
      <img src="https://via.placeholder.com/150" alt="Photo de profil" class="profile-pic mb-3">
      <div class="profile-info">
        <h3><%= @username %></h3>
        <p>Email: <%= @email %></p>
      </div>
    </div>

    <div class="col-md-8">
      <h3>Historique des Parties</h3>
      <div class="history">
        <ul class="list-group">
          <li class="list-group-item">
            Partie 1: Gagnée contre JohnDoe <span class="badge bg-success float-end">Victoire</span>
          </li>
          <li class="list-group-item">
            Partie 2: Perdue contre JaneDoe <span class="badge bg-danger float-end">Défaite</span>
          </li>
          <li class="list-group-item">
            Partie 3: Gagnée contre Player123 <span class="badge bg-success float-end">Victoire</span>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>