<style>
    .profile-pic {
      width: 150px;
      height: 150px;
      border-radius: 50%;
      object-fit: cover;
    }

    .profile-info {
      margin-bottom: 20px;
    }

    .history {
      background-color: #f8f9fa;
      padding: 20px;
      border-radius: 8px;
    }

    .edit-profile-btn {
      margin-top: 10px;
    }

    .rank-info {
      background-color: #e9ecef;
      padding: 15px;
      border-radius: 8px;
      margin-top: 20px;
    }
</style>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-4 text-center">
      <img src="<%= @img_url %>" alt="Photo de profil" class="profile-pic mb-3">
      <div class="profile-info">
        <h3><%= @username %></h3>
        <p>Email: <%= @email %></p>
        <button id="edit_profile_button" class="btn btn-primary edit-profile-btn">Edit Profile</button>
      </div>

      <!-- Zone de points de rang -->
      <div class="rank-info">
        <h4>Points de Rang</h4>
        <p>Victoires: <%= @victories %></p>
        <p>Défaites: <%= @defeats %></p>
        <p>Parties jouées: <%= @total_games %></p>
      </div>
    </div>

    <div class="col-md-8">
      <h3>Historique des Parties</h3>
      <div class="history">
        <ul class="list-group">
          <li class="list-group-item">
            Partie 1: Gagnée contre JohnDoe <span class="badge bg-success float-end">Victoire</span>
          </li>
          <li class="list-group-item">
            Partie 2: Perdue contre JaneDoe <span class="badge bg-danger float-end">Défaite</span>
          </li>
          <li class="list-group-item">
            Partie 3: Gagnée contre Player123 <span class="badge bg-success float-end">Victoire</span>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>
